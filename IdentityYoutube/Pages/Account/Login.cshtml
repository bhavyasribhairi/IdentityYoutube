@page
@model IdentityYoutube.Pages.Account.LoginModel
@{
}


<div class="container border" style="padding :20px ;box-sizing:border-box ">

    <form method="post" asp-page-handler="Login" >
        <div class="alert-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Credential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" asp-for="Credential.UserName" />
            </div>
            <span class="text-danger" asp-validation-for="Credential.UserName"></span>
        </div>
        <div class="form-group row" style="padding-top:20px">
            <div class="col-3">
                <label asp-for="Credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" asp-for="Credential.Password"/>
            </div>
            <div class="row form-check mb-2">
                <input type="checkbox" class="form-check-input" asp-for="Credential.RememberME" />
                <label class="form-check-label" asp-for="Credential.RememberME"></label>
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>
        <div class="form-group row" style="padding-top:20px">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
            <div class="col-5">
                
            </div>
        </div>

    </form>



</div>
