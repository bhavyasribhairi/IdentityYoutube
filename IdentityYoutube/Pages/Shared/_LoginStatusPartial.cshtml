
@if (User.Identity.IsAuthenticated)
{
    
<form method="post" style="display:flex;gap:10px;align-items:center;"  class="form-inline" asp-page ="/Account/Logout">
      <div>Welcome @User.Identity.Name</div>
     <button type="submit">Logout</button>
</form>

}

else{
    <a class="nav-link text-dark" asp-page="/Account/Login">Login</a>
}